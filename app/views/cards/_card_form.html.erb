<%= simple_form_for(card, as: :card, html: { multipart: true }) do |form| %>
  <%= form.error_notification %>
  <%= form.input :original_text %>
  <%= form.input :translated_text %>
  <%= form.input :review_date, as: :date %>
  <%= form.input :deck_id, collection: decks %>
  <%= image_tag(card.image_url) if card.image? %>
  <%= form.input :remote_image_url, label: 'Fill in image URL' %>
  <%= form.input :image, as: :file, label: 'OR just upload it' %>
  <%= form.input :image_cache, as: :hidden %>
  <%= form.input :remove_image, as: :boolean %>
  <%= form.button :submit %>
<% end %>